require 'date'

def dates(initial_date,final_date,day)
  dates_array = []
  first_month = initial_date.mon
  second_month = final_date.mon
  second_year = final_date.year
  i=0

  while initial_date.year<(second_year+1) do
    i+=1 
    puts Date.new(initial_date.year,initial_date.mon,day)
    dates_array[i]=Date.new(initial_date.year,initial_date.mon,day)
    initial_date=initial_date+=30
     
    break if initial_date.month==second_month+1 && initial_date.year==second_year 
      
  end
end

initial_date=Date.new(2001,8,3)
final_date=Date.new(2003,10,3)
day=10
dates(initial_date, final_date, day)

